{
  "name": "dojo-website-tests",
  "version": "1.0.0",
  "description": "Test suite for Dojo 1.04 website - Pre and post-migration testing",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "echo 'Opening unit tests in browser...' && open tests/test-suite.html || xdg-open tests/test-suite.html || start tests/test-suite.html",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --update-snapshots",
    "test:report": "playwright show-report",
    "serve": "npx http-server -p 8000 -c-1",
    "serve:bg": "npx http-server -p 8000 -c-1 > /dev/null 2>&1 &",
    "pretest:e2e": "npm run serve:bg && sleep 2",
    "posttest:e2e": "pkill -f http-server || true"
  },
  "keywords": [
    "dojo",
    "testing",
    "migration",
    "e2e",
    "unit-tests"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "http-server": "^14.1.1"
  }
}
